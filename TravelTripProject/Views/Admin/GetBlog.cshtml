@model TravelTripProject.Models.Classes.Blog
@{
    ViewBag.Title = "GetBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:16px">Update Blog</h2>
<br />

@using (Html.BeginForm("UpdateBlog", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(x => x.ID)
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Title)
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
    </div>
    <br />
    <div class="form-group">
        <label>Current Image:</label><br />
        <img src="@Model.BlogImage" width="150" height="100" style="object-fit:cover;" />
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.BlogImage, "Upload New Image")
        <input type="file" name="NewImage" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 15 })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Latitude)
        @Html.TextBoxFor(x => x.Latitude, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(x => x.Longitude)
        @Html.TextBoxFor(x => x.Longitude, new { @class = "form-control"})
    </div>
    <br />
    <button class="btn btn-success">Update Blog</button>
}

