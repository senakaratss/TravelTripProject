@using TravelTripProject.Models.Classes
@model List<Blog>

<div class="box1-left">
    @foreach (var y in Model)
    {
        <a href="/Blog/BlogDetail/@y.ID">
            <div class="bot-img">
                <img src="@y.BlogImage" alt=""  style="width:120px;height:65px"/>
            </div>
            <div class="bot-desc1">
                <p>@y.Description.Substring(0, y.Description.Substring(0, 80).LastIndexOf(" ")) ...</p>
            </div>
        </a>
        <div class="clear"></div>
    }
</div>
